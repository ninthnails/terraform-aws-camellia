{
  "description": "Camellia Kafka",
  "variables": {
    "region": "us-east-1",
    "kafka_version": "2.3.1",
    "source_version": "LATEST",
    "build_id": "UNKNOWN",
    "ami_base_name": "camellia",
    "iam_instance_profile": "camellia-packer-instance-role",
    "instance_type": "t3.micro"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "ami_name": "{{ user `ami_base_name` }}-kafka-{{ user `kafka_version` }}-hvm-{{ isotime \"2006-01-02\" }}-{{ user `build_id` }}-x86_64-gp2",
      "instance_type": "{{ user `instance_type` }}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "ena-support": "true",
          "name": "amzn2-ami-hvm-2.0.2019*",
          "description": "Amazon Linux 2 AMI 2.0.2019* x86_64 HVM gp2",
          "root-device-type": "ebs",
          "block-device-mapping.volume-type": "gp2"
        },
        "owners": [ "amazon" ],
        "most_recent": true
      },
      "ssh_username": "ec2-user",
      "iam_instance_profile": "{{ user `iam_instance_profile` }}",
      "decode_authorization_messages": true,
      "vpc_filter": {
        "filters": {
          "isDefault": "true",
          "state": "available"
        }
      },
      "subnet_filter": {
        "filters": {
          "default-for-az": "true",
          "state": "available"
        },
        "most_free": true,
        "random": false
      },
      "temporary_security_group_source_cidrs": [ "172.0.0.0/8" ],
      "region": "{{ user `region` }}",
      "ena_support": true,
      "ebs_optimized": true,
      "enable_t2_unlimited": false,
      "tags": {
        "Name": "{{ user `ami_base_name` }}-kafka-{{ user `kafka_version` }}-hvm-{{ isotime \"2006-01-02\" }}-{{ user `build_id` }}-x86_64-gp2",
        "Version": "{{ user `source_version` }}",
        "Build Id": "{{ user `build_id` }}"
      },
      "run_tags": {
        "Name": "packer-{{ user `ami_base_name` }}-kafka-{{ user `kafka_version` }}-hvm-{{ isotime \"2006-01-02\" }}-{{ user `build_id` }}-x86_64-gp2",
        "Version": "{{ user `source_version` }}",
        "Build Id": "{{ user `build_id` }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "ansible_env_vars": [ "ANSIBLE_NOCOLOR=True" ],
      "extra_arguments": [ ],
      "playbook_file": "ansible/build.yaml",
      "groups": [ "build" ],
      "user": "ec2-user"
    }
  ]
}
